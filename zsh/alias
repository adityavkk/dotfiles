# ALIAS

alias aliases='v ~/dev/dotfiles/zsh/alias'

alias l='ls -la'
alias v='nvim'
alias c="clear"
alias e="exit"
alias ip="ifconfig | grep inet"
alias pubip="dig +short myip.opendns.com @resolver1.opendns.com"
alias cwd="pwd|pbcopy"
alias d="cd ~/dev/dotfiles"
alias ctags="ctags -R --exclude=.git --exclude=log ."
alias src="source ~/.zshrc"
alias dev="/Users/akumarakrishnan/Documents/dev"
alias notes="/Users/akumarakrishnan/Documents/dev/notes"
alias scrap="/Users/akumarakrishnan/Documents/dev/scrap"
alias hosts="sudo vim /etc/hosts"
alias flush_dns_cache="sudo killall -HUP mDNSResponder"
alias win="cd /Volumes/C"

# Take a note
note () {
  v ~/Documents/dev/notes/$1.md
}

# JS
js () {
  nodemon $1 -q -x 'clear && node'
}

flo () {
  tmux split-window -v && nodemon $1 -x 'flow-remove-types $1 -o .flow-removed'
}

jsf () {
  nodemon .flow-removed -q -x 'clear && node'
}

# HS
hs () {
  ghci $1
}

# Scheme
alias scheme="/Applications/MIT:GNU\ Scheme.app/Contents/Resources/mit-scheme"
scm () {
  scheme --load $1
}

# Racket
alias racket="/Applications/Racket\ v6.7/bin/racket"
rkt () {
  racket -f $1 -i
}

# Git
alias gs='git status -sb'
alias gco='git checkout'
alias gcb='gco -b'
alias ga='git add -A'
alias gcm='git commit -m'
alias hlog='git log --date-order --graph --date=short --format="%C(green)%h%Creset %C(yellow)%an%Creset %C(blue bold)%ad%Creset %C(red bold)%d%Creset%s"'
alias alog='git log --date-order --all --graph --date=short --format="%C(green)%h%Creset %C(yellow)%an%Creset %C(blue bold)%ad%Creset %C(red bold)%d%Creset%s"'
alias glog='git log --oneline'
alias gpl='git pull'
alias gpu='git push origin --tags'
alias grv='git revert -m 1'

# Python
alias py='python3'
alias pyi='python3 -i'

take () {
  mkdir $1
  cd $1
}
