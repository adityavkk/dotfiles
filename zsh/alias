# ALIAS

alias aliases='nv ~/dotfiles/zsh/alias'

alias l='ls -la'
alias vim='/usr/local/Cellar/vim/8.0.0046/bin/vim'
alias v='nvim'
alias fullstack="cd ~/dev/Fullstack"
alias sandbox="cd ~/dev/Sandbox"
alias scrap="cd ~/dev/scrap"
alias euler="cd ~/dev/Problems/Project-Euler"
alias c="clear"
alias e="exit"
alias cwd="pwd|pbcopy"
alias d="cd ~/dotfiles"
alias ctags="ctags -R --exclude=.git --exclude=log ."
alias src="source ~/.zshrc"
alias dev="cd ~/dev"

ip () {
  ifconfig | grep "inet "
}

# NeoVim
nv () {
  nvim $1
}

# JS
js () {
  nodemon $1 -q -x 'clear && node'
}

flo () {
  tmux split-window -v && nodemon $1 -x 'flow-remove-types $1 -o .flow-removed'
}

jsf () {
  nodemon .flow-removed -q -x 'clear && node'
}

# HS
hs () {
  ghci $1
}

# Scheme
alias scheme="/Applications/MIT:GNU\ Scheme.app/Contents/Resources/mit-scheme"
scm () {
  scheme --load $1
}

# Racket
alias racket="/Applications/Racket\ v6.7/bin/racket"
rkt () {
  racket -f $1 -i
}

# F#
alias fsi='fsharpi'

# Git
alias gs='git status -sb'
alias gco='git checkout'
alias gcb='gco -b'
alias ga='git add -A'
alias gcm='git commit -m'
alias hlog='git log --date-order --graph --date=short --format="%C(green)%h%Creset %C(yellow)%an%Creset %C(blue bold)%ad%Creset %C(red bold)%d%Creset%s"'
alias alog='git log --date-order --all --graph --date=short --format="%C(green)%h%Creset %C(yellow)%an%Creset %C(blue bold)%ad%Creset %C(red bold)%d%Creset%s"'
alias glog='git log --oneline'
alias gpl='git pull'
alias gpu='git push origin'

# Python
alias py='python3'
alias pyi='python3 -i'

take () {
  mkdir $1
  cd $1
}
